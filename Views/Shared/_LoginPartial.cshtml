@using Microsoft.AspNetCore.Identity
@using blog.Areas.Identity.Data

@inject SignInManager<User> SignInManager

<ul class="navbar-nav align-center">
@if (SignInManager.IsSignedIn(User))
{
    
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-danger text-white">Cerrar Sesi√≥n</button>
        </form>
    </li>
}
else
{
    <li class="nav-item mr-1">
        <a class="nav-link btn btn-primary text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn btn-secondary text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
